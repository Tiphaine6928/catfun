{
  "compilerOptions": {
    // --- Structure du projet ---
    "target": "ES2019",               
    "module": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",

    // --- Environnement navigateur ---
    "lib": ["DOM", "ES2019"],         
    "moduleResolution": "node",
    "strict": true,

    // --- Génération du code ---
    "sourceMap": true,                
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}

